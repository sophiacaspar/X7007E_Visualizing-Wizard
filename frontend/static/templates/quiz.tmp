{{define "Title"}}
	Quiz
{{end}}

{{define "Body"}}
<html>
<script src="/static/js/quiz.js"></script>
<body>

<div class="row">
	<div class="question" >
		<h1 id="question">What day is it today?</h1>
			
	</div>
</div>

<div class="row">

	<div id="quiz" class="btn-container">
	    <div class="col-md-3">
	        <a class="btn btn-success btn-lg btn-block btn-huge" id="ans1" onclick="getAnswers('monday')">{{ .Choice1 }}</a>
	    </div>
	    <div class="col-md-3">
	        <a class="btn btn-success btn-lg btn-block btn-huge" id="ans2" onclick="getAnswers('wednesday')"> {{ .Choice2 }}</a>
	    </div>
	    <div class="col-md-3">
	        <a class="btn btn-success btn-lg btn-block btn-huge" id="ans3" onclick="getAnswers('friday')">{{ .Choice3 }}</a>
	    </div>
	    <div class="col-md-3">
	        <a class="btn btn-success btn-lg btn-block btn-huge" id="ans4" onclick="getAnswers('saturday')">{{ .Choice4 }}</a>
	    </div>

	<div id="result"></div>

</body>
</html>

{{end}}